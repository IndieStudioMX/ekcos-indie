.testimonials-wrapper
	height 100%
	width 100%
	position absolute
	top 6rem
	bottom 0 
	left 0
	right 0

.testimonials-container
	background url('../images/ekcoscreen-bg.jpg')
	background-repeat no-repeat
	background-size 100%
	position relative
	with 100%
	height 41rem

.testimonials-features-container
	background url('../images/power-bg.jpg')
	background-size 100% 101%
	background-position 0 -2px
	position relative
	with 100%
	height 122rem
	padding-top 5rem
	top -1rem
	
.container-t, .container-i
	padding 2rem 0
	width 100%
	margin 0 auto

.container-i
	background rgba(0,0,0,.1)

.testimonials-content-p, .testimonials-content-i
	margin 0 auto
	width 900px


.testimonials-author
	display inline
	border-bottom 2px solid #444
	font-size 1.5rem

.testimonials-margin
	margin-top 10rem
	
.footer-t
	background $footer-bg
	margin-top 0
	padding 0 2.9rem
	line-height 4.5rem
	position relative 
	width 100%
	height auto
	font-size 1.3rem
	p 
		color $text-color-light 
	a
		color $text-color-light 
		display block
		width 100%
		height 40px
	.brand-footer
		position relative
		top -2.5rem
		
@media screen and (min-width 200px) and (max-width 480px)
	.testimonials-content-p, 
	.testimonials-content-i
		width 100%
	.testimonials-container
		background-size cover
		background-position 50% 50%
	.testimonials-features-container
		height 226rem 
		max-height 250rem 
		
@media screen and (min-width 481px) and (max-width 899px)
	.testimonials-content-p, 
	.testimonials-content-i
		width 100%
	.testimonials-container
		background-size cover
		background-position 50% 50%
	.testimonials-features-container
		height 231rem 
	
	.img-responsive, 
	.thumbnail > img, .thumbnail a > img, 
	.carousel-inner > .item > img, 
	.carousel-inner > .item > a > img
		margin 0 auto

@media screen and (min-width 481px) and (max-width 899px) and (min-height 1200px)
	.testimonials-features-container 
		height 246rem
	
@media screen and (min-width 900px) and (max-width 480px)
	.testimonials-container 
		height 39rem !important
//Generic styles for Netbook 10"
@media screen and (min-width 1024px) and (min-height 600px)
	.testimonials-wrapper 
		top 8rem
	
@media screen and (min-width 1724px) and (min-height 1100px)
	.testimonials-wrapper 
		top 8rem
	.testimonials-container 
		height 64rem
		
@media screen and (min-width 2500px) and (min-height 1100px)
	.testimonials-wrapper 
		top 8rem
	.testimonials-container 
		height 84rem
	
























