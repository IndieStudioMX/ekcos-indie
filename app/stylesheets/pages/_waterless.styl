.waterless-wrapper
	height 100%
	width 100%
	position absolute
	top 0
	left 0
	bottom 0
	right 0

.waterless-container
	background url('../images/powerscreen-bg.jpg')
	background-size 100%
	position relative
	with 100%
	height 61rem

.waterless-title
	margin 22rem auto 3rem auto
	border-top 2px solid #444
	border-bottom 2px solid #444
	width 77%
	text-transform uppercase
	font-size 2.3rem
	font-weight bold

.enter-waterless 
	margin-bottom 2rem
	a 
		display block
		margin 0 auto
		padding .5rem .2rem
		margin-top 1rem 
		width 35%
		background black
		text-transform uppercase
		color white
		font-size 1.3rem
		&:hover 
			background #333

.waterless-message
	display block 
	margin 2.5rem auto 0 auto
	width 50%
	heigh auto

.waterless-eztrap
	width 90%
	margin 0 auto
	display block

.waterless-content 
	font-size 1.5rem

.menuProducts-waterless
	top 29rem
	
.footer-waterless
	background $footer-bg
	margin-top 1rem
	padding 1.3rem 2.9rem
	line-height 4.5rem
	position absolute 
	width 100%
	height auto
	font-size 1.3rem
	p 
		color $text-color-light 
	a
		color $text-color-light 
		display block
		width 100%
		height 40px
		&:hover 
			color $text-color-light 
		
	.brand-footer
		position relative
		top -3.5rem
		

@media screen and (min-width 200px) and (max-width 480px)
	.waterless-contanier 
		width 100%
		height 80rem
		
	.waterless-title 
		margin 12rem auto 3rem auto
		font-size 2rem 
		
	.waterless-message 
		margin 0.5rem auto 0 auto 

@media screen and (min-width 1024px) and (min-height 600px)
	.menuProducts-waterless 
		top 22rem
	.waterless-title
		margin 11rem auto 3rem auto
		width 85%
	.waterless-content 
		font-size 1.3rem
	.enter-waterless a 
		padding 0.5rem 0.2rem 
		margin-top 1rem 
		width 48%

//Generic styles for Netbook 10"
@media screen and (min-width 1024px) and (max-width 1279px) and (min-height 768px)
	.menuProducts-waterless
		top 33rem

	.waterless-title
		margin 25rem auto 3rem auto
	
	.waterless-message 
		margin 1.5rem auto 0 auto

@media screen and (min-width 1280px) and (max-width 1439px) and (min-height 768px)
	.waterless-contanier 
		height 100%
//Generic styles for Netbook 10"
@media screen and (min-width 1440px) and (min-height 900px)
	.waterless-contanier 
		height 100%
	.waterless-content 
		margin 3rem auto 0 auto
	.waterless-eztrap 
		margin-top -2rem




























