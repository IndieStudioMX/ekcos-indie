.ekcoscreen-wrapper
	height auto
	width 100%
	position relative
	top 5rem

.ekcoscreen-container
	background url('../images/bg-ekcos-b.png') no-repeat
	background-size 100%
	background-position 0
	position relative
	with 100%
	height 52rem
	
.powerscreen-video-container
	height auto
	img 
		margin-top -1rem
		width 100%
	figcaption 
		margin-top -1rem
		font-style italic
		font-size 1.5rem
		padding-bottom 0.5rem

.ekcoscreen-testimonial
	padding 1.2rem .1rem 0.2rem .1rem
	.ekcoscreen-p 
		line-height 20px
		font-size 1.5rem
	.ekcoscreen-testimonial-down
		width 65%
		margin-left 35%
		margin-top -1rem
		
.ekcoscreen-author
	font-weight bold
	padding-top 2.5rem
	padding-left 1rem
	margin-bottom .4rem
	&:before
		content ""
		width 3px
		height 58px
		background rgba(34,31,31,.5) 
		position absolute
		left 1rem 
		top 1.1rem 
	
.ekcoscreen-role 
	font-size 1.1rem
	margin-top  -.5rem
	padding-left 1rem

.ekcoscreen-legend-container
	background rgba(34,31,31,.3)
	margin-top 2rem
	padding 1rem
	p
		line-height 12px
		margin 1rem
		font-size 1.5rem
	.ekcoscreen-legend-title
		font-size 2.6rem
		line-height 17px
		font-weight bold
	.ekcos-legend-line:after 
		content ""
		width 3px 
		height 100px 
		background rgba(34,31,31,.5) 
		position absolute
		left 0
		
.ekcos-description-list
	list-style none
	margin-top 3rem
	li 
		margin-top 1.5rem
		text-align justify
		width 95%
		font-size 1.5rem

.ekcos-line 
	width 105%
	margin-top 37rem
	margin-left -3rem
	
.bio-container-ekcos 
	background url('../images/bio-bg.png') no-repeat
	background-size 100%
	background-position -129px 0
	width 100%
	height 313px 
	position absolute
	top 169rem
	z-index 1

.bio-line-ekcos 
	position relative
	top 175rem
	border-top 2px solid #444
	margin 0 auto
	width 63%
	
.ekcos-products-container
	margin-top 3rem
	height 632px
	position relative
	padding 2rem 0
	background rgba(255,255,255,.25)

.thumbnail-ekcos  
	border 0
	background transparent
	img 
		width 50%
		height 50%
		display block
		margin 1rem auto 0 auto
	.product-title
		font-size 1.5rem
		margin-top 0
		font-weight bold
	.product-description 
		font-size 1.5rem
		line-height 10px
	.btn-product-buy 
		border-radius 0
		background black
		border 0
		border-bottom 4px solid rgb(204,204,51)
		text-transform uppercase
		padding .3rem 1.5rem
		font-size 1.5rem
		&:hover 
			background lighten(rgb(0,0,0,0), 20%)
	
.ekcos-features-container
	background url('../images/power-bg.jpg')
	background-size 100% 101%
	background-position 0 -2px
	position relative
	with 100%
	height 244rem;

.footer-ekcoscreen
	display block
	position relative
	top 296rem

.ekcos-subtitle-product, .ekcos-subtitle-demo
	font-style italic 
	font-weight bold

