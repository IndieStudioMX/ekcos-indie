.news-wrapper
	height auto
	width 100%
	position relative
	top 5rem

.news-container
	background url('../images/news-bg.jpg') no-repeat
	background-size 100%
	position relative
	with 100%
	height 127rem
	.news-quote-container
		margin-top 23rem
		.news-quote-title
			border-bottom 2px solid rgba(0,0,0,.3)
			margin 0 auto
			width 13%
			font-size 4.5rem
			margin-bottom 3rem
		.news-quote 
			line-height 10px
			font-size 1.5rem
		.news-quote-author 
			margin 3rem auto 0 auto
			border-bottom 2px solid rgba(0,0,0,.2)
			width 10%
			font-weight bold
		.news-quote-role 
			font-weight bold

.container-n
	width 1000px
	margin 5rem auto 0 auto
	padding-top 3rem

.news-links-title 
	background rgba(0,0,0,.1)

.news-links-date
	margin-top 1rem
	span 
		border-top 2px solid 
		margin-top 1rem
	.update
		width 70%
		display block
		
.news-links-access
	a 
		background rgb(0,0,0)
		padding .5rem 1rem
		margin-top .3rem 
		margin-left 7rem	
		color rgb(204,204,51)
		position relative
		top .3rem
		left 1.4rem 
		&:hover 
			background rgba(0,0,0, .7)	
			text-decoration none
			color rgb(204,204,51)
		
	
.footer-news
	background $footer-bg
	margin-top -1rem
	padding 1.3rem 2.9rem
	line-height 4.5rem
	position absolute 
	width 100%
	height auto
	font-size 1.3rem
	p 
		color $text-color-light 
	a
		color $text-color-light 
		display block
		width 100%
		height 40px
		&:hover 
			color $text-color-light 
		
	.brand-footer
		position relative
		top -2.5rem

@media screen and (min-width 200px) and (max-width 480px)
	.news-container 
		background-size 100%
		margin-top 3rem 
		height 160rem
		.news-quote-container 
			margin-top 6rem 
			.news-quote-title
				width 50%
				font-size 4.5rem
				margin-bottom 3rem 
			.news-quote 
				line-height 20px
			.news-quote-author
				width 40%
	.container-n 
		width 100%
	.news-links-access a 
		display block 
		word-wrap break-word
	.news-links-container 
		background-image url("../images/power-bg.jpg")
		margin-top -3rem
		background-position 0 -5px
		background-repeat no-repeat
		background-size 100% 100%
		height 121rem
		max-height 150rem

@media screen and (min-width 481px) and (max-width 899px)
	.news-container 
		background-size 100%
		margin-top 3rem 
		height 160rem
	.news-quote-container 
		margin-top 6rem 
		.news-quote-title
			width 50%
			font-size 4.5rem
			margin-bottom 3rem 
		.news-quote 
			line-height 20px
		.news-quote-author
			width 40%
	.container-n 
		width 100%
	.news-links-access a 
		display block 
		word-wrap break-word
	.news-links-container 
		background-image url("../images/power-bg.jpg")
		margin-top -3rem
		background-position 0 -5px
		background-repeat no-repeat
		background-size 100% 100%
		height 121rem
		max-height 150rem
	
	.news-container .news-quote-container
		margin-top 11rem
		
//Generic styles for Netbook 10"
@media screen and (min-width 1024px) and (min-height 600px)
	.news-container .news-quote-container
		margin-top 18rem
	
	.news-container
		height 120rem 
		background-size 100% 100%


//Generic styles for Netbook 13"
@media screen and (min-width 1024px) and (min-height 600px)
	.container-n 
		width 1000px !important

@media screen and (min-width 2000px) and (min-height 1200px)
	.news-container
		height 155rem 
		background-size 100%
	
	.news-container .news-quote-container
		margin-top 40rem



	






