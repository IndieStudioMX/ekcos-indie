.company-wrapper
	height 100%
	width 100%
	position relative

.company-container
	background url('../images/power-bg.jpg') no-repeat
	background-size 100%
	position relative
	width 100%
	height 100%
	margin-top -5rem
	.company-title
		top 38rem
		margin 0 auto
		position relative
		width 35%
		line-height 27px
		font-size 1.7rem
.footer-company 
	display block


@media screen and (min-width 200px) and (max-width 349px)
	.company-container 
		height 100%
		background-size 100% 100%
		top 11%
		position fixed 
		.company-title 
			top 20rem 
			width 100%
			font-size 1.3rem 
			
