.restroom-wrapper 
	position absolute 
	top 0 
	left 0
	height 100% 
	height 100rem
	width 100%

.row
	margin-right 0
	margin-left 0

.restroom-items-container
	width 100%
	top 28%
	position absolute
.leaf-restroom
	background url('../images/leaf.png')
	background-repeat no-repeat
	background-size 100%
	width 84%
	height 33rem
	position absolute
	top 8rem
	left 0
	z-index 1

.power-item 
	position relative 
	a 
		position relative
		left 0
		display block
		background black
		text-align center
		width 44%
		text-transform uppercase
		padding 0.3rem 0
		margin -2rem auto 0 auto
		color rgba(255,255,255,.8)
		font-size 1.5rem
		&:hover 
			text-decoration none
			color rgba(255,255,255,.8)
	img 
		max-width 100%
.ekcos-item
	position relative 
	a 
		display block
		background black
		text-align center
		margin-top 1rem
		position relative
		left 0.4rem
		width 44%
		text-transform uppercase
		padding 0.3rem 0
		color rgba(255,255,255,.8)
		font-size 1.5rem
		margin -2rem auto 0 auto
		&:hover 
			text-decoration none
			color rgba(255,255,255,.8)
	img 
		max-width 100%

.restroom-message 
	background url('../images/message-restroom.png')
	background-size 100% 100%
	height 40px
	width 100%
	position absolute
	bottom 5.2rem 
	
.restroom-advise 
	background url('../images/advise-restroom.png')
	background-size 100% 100%
	height 92px
	width 222px
	position absolute
	top -6rem
	left 4.5rem

.navProducts-restroom
	top 29rem
	
@media screen and (min-width 200px) and (max-width 480px)
	.leaf-restroom 
		width 100%
		height 14rem
	.restroom-items-container
		height 80rem
	.restroom-items-container
		top 10%
		
	.restroom-message 
		display none
		
@media screen and (min-width 481px) and (max-width 800px)
	.restroom-wrapper 
		height 140rem 
	.leaf-restroom 
		width 100%
		height 14rem
	.restroom-items-container
		height 80rem
	.restroom-items-container
		top 20rem
		
	.restroom-message 
		display none

@media screen and (min-width 1300px) and (max-width 1900px)
	.restroom-message 
		top 72rem !important
	
