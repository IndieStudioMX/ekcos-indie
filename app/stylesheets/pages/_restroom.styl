.restroom-wrapper 
	position absolute 
	top 0 
	left 0
	height 100% 
	height 100rem
	width 100%
	
.restroom-container
	background url("../images/power-bg.jpg")
	width 100%
	height 100%
	background-size: 100% 100%
	top 0
 

.container-rest 
	width: 1000px;
	margin 0 auto 
.row
	margin-right 0
	margin-left 0

.restroom-items-container 
	top 18rem
	position relative

.leaf-restroom
	background url('../images/leaf.png')
	background-repeat no-repeat
	background-size 100%
	width 84%
	height 33rem
	position absolute
	top 4rem
	left 0
	z-index 1
	
.buynow-rest-btn
	background #000
	text-align center
	text-transform uppercase
	color rgba(255,255,255,0.8)
	border-radius 0
	border 0
	width 80%
	margin -6rem auto 0 auto

.power-item 
	position relative 
	a 
		position relative
		left 0
		display block
		background black
		text-align center
		width 44%
		text-transform uppercase
		padding 0.3rem 0
		margin -2rem auto 0 auto
		color rgba(255,255,255,.8)
		font-size 1.5rem
		&:hover 
			text-decoration none
			color rgba(255,255,255,.8)
	img 
		max-width 100%
.ekcos-item
	position relative 
	a 
		display block
		background black
		text-align center
		margin-top 1rem
		position relative
		left 0.4rem
		width 44%
		text-transform uppercase
		padding 0.3rem 0
		color rgba(255,255,255,.8)
		font-size 1.5rem
		margin -2rem auto 0 auto
		&:hover 
			text-decoration none
			color rgba(255,255,255,.8)
	img 
		max-width 100%

.restroom-message 
	background url('../images/message-restroom.png')
	background-size 100% 100%
	height 40px
	width 100%
	position absolute
	bottom 5.2rem 
	
.restroom-advise 
	background url('../images/advise-restroom.png')
	background-size 100% 100%
	height 92px
	width 222px
	position absolute
	top -6rem
	left 4.5rem

.navProducts-restroom
	top 29rem
	
@media screen and (min-width 200px) and (max-width 480px)
	.leaf-restroom 
		width 100%
		height 14rem
	.restroom-items-container
		height 80rem
	.restroom-items-container
		top 10%
		
	.restroom-message 
		display none
		
@media screen and (min-width 200px) and (max-width 800px)
	.restroom-wrapper 
		height 83rem 
	.leaf-restroom 
		width 100%
		height 14rem
	.restroom-items-container
		height 75rem
	.restroom-items-container
		top 20rem
		
	.restroom-message 
		display none
		
	.image-ekcos-item, 
	.images-power-item 
		height 400px
		width 535px
	
	.img-resp-item 
		display block !important
	
	.img-normal-item 
		display none !important 
		
	.buynow-rest-btn 
		width: 10rem;
		margin: -3rem -11rem 0 auto;
		font-size: 1rem;
		padding: .3rem .1rem;
		width: 7rem;

	.thumb-cap 
		margin-top	-5rem
	
	.footer-message 
		top: 82rem
		
	.restroom-items-container 
		height: 77rem

@media screen and (min-width 1300px) and (max-width 1900px)
	.restroom-message 
		top 72rem !important
		

	
