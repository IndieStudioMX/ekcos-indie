.buynow-container 
	position fixed
	top 10rem
	right 13.5rem
	z-index 1
	a 
		display block
		height 100%
		color red
		font-family $font-family

li
	margin-left 1em 
	
.nav > li > a 
	padding 10px 1px 0 0
	margin 0 8px 
	margin 0 14.5px
	
.nav > li > a:hover, 
.nav > li > a:focus 
	background-color transparent 
	
.navbar.navbar-default.navbar-fixed-top 
	background-color $menu-light 
	background-image url('../images/navigation-combined.png')
	background-size 100% 100%
	background-repeat no-repeat
	border-color transparent 
	padding 0 
	height 74px
	margin 0
	
.navbar-default .navbar-nav li 
	& > a 
		font-size 1.25rem 
		color $text-color 
	
	& > .item-menu 
		transition-menu .1s ease-in 
		&:hover 
			transition .2s ease-in 
	
	&:nth-child(2), 
	&:nth-child(3),
	&:nth-child(4),
	&:nth-child(5)
		margin-left -0.1rem 
		
.mobile-submenu 
	display none

.navbar-products-mobile 
	display none
	
.brand 
	display block
	height auto
	position absolute
	top -7px
	left -18px
	z-index 2
	img 
		max-width 100%
		width 505px

.collapse 
	display block
	visibility initial

.navbar-header 
	width 44rem
	height 86px
	position relative
	left -3rem

.main-menu 
	width 100%
	/*width 115rem*/
	height 73px
	right 0
	position relative
	z-index 1
	
.menu-container
	right 0
	position absolute
	
.navbar-default .navbar-nav li 
	& > a 
		font-size 1.55rem
		color $text-color
		height 100% 
		width 100% 
		padding 0 4rem
		&:active 
			border 0
		.nav-title 
			-webkit-transform skew(-29deg)
			-moz-transform skew(-29deg)
			-ms-transform skew(-29deg)
			transform skew(-29deg)
			display block
			height 2.8rem 
			padding-bottom 2.4rem
			padding-top .4rem 
			line-height 2.1
			&:hover 
				border-bottom: 3px solid #fff;
		
	& > .item-menu 
		transition-menu .2s ease-in 
		height 4.5rem
		margin 0
		padding 0 2rem
	& > .item-menu:hover 
		transition .2s ease-in 
	&:first-child,  
	&:nth-child(2), 
	&:nth-child(3), 
	&:nth-child(4), 
	&:nth-child(5)
		height 4.5rem 
		-webkit-transform skew(29deg)
		-moz-transform skew(29deg)
		-ms-transform skew(29deg)
		transform skew(29deg)
		transition-menu .2s ease-in 
		padding 0
		margin 0 .5rem 
	
	&:first-child
		margin-left 25rem
		&:hover 
			hover-bg()
			
	&:nth-child(2), 
	&:nth-child(3),
	&:nth-child(4),
	&:nth-child(5)
		&:hover 
			hover-bg()

	&:last-child 
		/*position absolute
		left 63.1rem;*/
		top -7px
		left 1.6rem
		width 337px
		background url("../images/view-cart0-.svg") no-repeat 100% 100%
		background-position: -7px -14px
		&:hover 
			background url('../images/view-cart0-hover.svg') no-repeat 100% 100%
			background-position -7px -14px
			color $font-active-color
		& > a 
			color #C2C861
			font-weight bold
			text-transform uppercase
			font-size 1.25rem
			height 50px
			margin-left 3rem
			line-height 5.25rem
			-webkit-transform skew(0)
			-moz-transform skew(0)
			-ms-transform skew(0)
			transform skew(0)
			&:hover 
				color #C2C861		
			& > img
				width 18%
				position absolute 
				top 0
				left 9.6rem
	
.nav-line 
	position absolute 
	height 4px 
	background $navbar-line 
	width 100% 
	border-top 0
	top 2.1rem
	
/* Navigation Products */ 
.navbar-products 
	position absolute 
	/*width 137rem*/
	height 2.8rem
	top 4.5rem 
	font-weight bold
	right 0
	z-index 3
	li 
		font-size 1.25rem 
		margin-left 0
		float left 
		transform skew(29deg)
		-webkit-transform: skew(29deg)
		-moz-transform skew(29deg)
		-ms-transform skew(29deg)
		padding 0
		-webkit-transition .2s all ease-in
		-moz-transition .2s all ease-in
		-ms-transition .2s all ease-in
		transition .2s all ease-in
		&:hover 
			background-color $navbar-submenu_shadow
			background -moz-linear-gradient(-45deg,  rgba(125,185,232,1) 0%, rgba(183,183,181,1) 0%, rgba(143,145,147,1) 41%, rgba(85,84,86,1) 99%)
			background -webkit-gradient(linear, left top, right bottom, color-stop(0%,rgba(125,185,232,1)), color-stop(0%,rgba(183,183,181,1)), color-stop(41%,rgba(143,145,147,1)), color-stop(99%,rgba(85,84,86,1)))
			background -webkit-linear-gradient(-45deg,  rgba(125,185,232,1) 0%,rgba(183,183,181,1) 0%,rgba(143,145,147,1) 41%,rgba(85,84,86,1) 99%)
			background -o-linear-gradient(-45deg,  rgba(125,185,232,1) 0%,rgba(183,183,181,1) 0%,rgba(143,145,147,1) 41%,rgba(85,84,86,1) 99%)
			background -ms-linear-gradient(-45deg,  rgba(125,185,232,1) 0%,rgba(183,183,181,1) 0%,rgba(143,145,147,1) 41%,rgba(85,84,86,1) 99%)
			background linear-gradient(135deg,  rgba(125,185,232,1) 0%,rgba(183,183,181,1) 0%,rgba(143,145,147,1) 41%,rgba(85,84,86,1) 99%)		
			-webkit-transform scale(1.2) skew(29deg) 
			-moz-transform scale(1.2) skew(29deg) 
			-ms-transform scale(1.2) skew(29deg) 
			transform scale(1.2) skew(29deg) 
			-webkit-transition .3s all ease-in
			-moz-transition .3s all ease-in
			-ms-transition .3s all ease-in
			transition .3s all ease-in
				
		&:first-child 
			margin-left 25rem
		
		&:last-child
			background url('../images/docs-bg-light.png')
			background-size 100%
			background-position 0 0 
			width 28rem 
			right 0
			height 4rem
			background-repeat no-repeat 
			-webkit-transform scale(1) skew(0deg)
			-moz-transform scale(1) skew(0deg)
			-ms-transform scale(1) skew(0deg)
			transform scale(1) skew(0deg)
			&:hover 
				background url('../images/docs-bg-light_hover.png') no-repeat
				background-position 0 0
				background-size 100%
				-webkit-transform scale(1) skew(0deg)
				-moz-transform scale(1) skew(0deg)
				-ms-transform scale(1) skew(0deg)
				transform scale(1) skew(0deg)
			& > a 
				color #C2C861
				-webkit-transform skew(0)
				-moz-transform skew(0)
				-ms-transform skew(0)
				transform skew(0)	
				font-size 1.5rem 
				width 24rem 
				line-height 1.9
				margin-left 3rem
				&:hover 
					color $font-active-color
		& > a 
			color $text-color
			height 2.8rem
			padding .5rem 3.5rem .5rem 3.5rem
			-webkit-transform skew(-29deg)
			-moz-transform skew(-29deg)
			-ms-transform skew(-29deg)
			transform skew(-29deg)
			&:hover 
				color $text-color-light
			&:active 
				border 0 
				
 			