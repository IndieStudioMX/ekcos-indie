vendor(prop, val, prefixes = ())
	for prefix in prefixes 
		-{prefix}-{prop} val
	{prop} val 

smooting() 
	-webkit-font-smoothing antialiased

border-box() 
	vendor('box-sizing', arguments, moz webkit ms)

filterBlur()
	vendor('filter', arguments, webkit ms moz)

transform()
	vendor('transform', arguments, webkit ms moz)

bg-gradient()
	vendor('background-image', arguments, webkit ms moz)

transition-menu()
	vendor('transition', arguments, webkit ms moz)

hover-bg() 
	background-color #c6cc8d
	background-image -webkit-linear-gradient(to top left,rgba(255,255,255,0) 0%,rgba(255,255,255,0.8) 100%)
	background-image -webkit-linear-gradient(bottom right, rgba(255,255,255,0) 0%, rgba(255,255,255,0.8) 100%)
	background-image -o-linear-gradient(bottom right, rgba(255,255,255,0) 0%, rgba(255,255,255,0.8) 100%)
	background-image: linear-gradient(to top left, rgba(255,255,255,0) 0%, rgba(255,255,255,0.8) 100%)
	background-image -moz-linear-gradient(to top left,rgba(255,255,255,0) 0%,rgba(255,255,255,0.8) 100%)
	background-image -ms-linear-gradient(to top left,rgba(255,255,255,0) 0%,rgba(255,255,255,0.8) 100%)
	background-image linear-gradient(to top left,rgba(255,255,255,0) 0%,rgba(255,255,255,0.8) 100%)
	-webkit-transform skew(29deg) scale(1.1)
	-moz-transform skew(29deg) scale(1.1)
	-ms-transform skew(29deg) scale(1.1)
	-webkit-transform skew(29deg) scale(1.1)
	-ms-transform skew(29deg) scale(1.1)
	-moz-transform skew(29deg) scale(1.1)
	transform skew(29deg) scale(1.1)
	-webkit-transition .1s all ease-in
	-moz-transition .1s all ease-in
	-ms-transition .1s all ease-in
	transition .1s all ease-in
	font-weight bold
	cursor pointer

item-buy()
	position relative	
	top	-3.46rem 
	left 16.16rem
	color $font-active-color
	font-size 1rem
	text-transform uppercase
	background url('../images/buy-btn.svg')
	background-repeat no-repeat 
	background-size 117%
	background-position -18px -34px
	padding .16rem 0 1rem 0
	display block
	height 20px
	width 89px
	text-indent 1.9rem
	&:hover 
		background url('../images/buy-btn_hover.svg')
		background-repeat no-repeat 
		background-size 117%
		background-position -18px -34px
		text-decoration none

flag-structure()
	background-size 1147px !important
	position absolute
	top 1rem !important
	left 2.3rem !important
	z-index 3