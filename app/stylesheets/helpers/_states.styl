.active-item
	position absolute
	width 100%
	height 4px
	top 3rem
	left 0
	background $font-active-color
	
.active-company, .active-news, .active-contact  
	background-color $navbar-submenu_shadow
	background-image: -webkit-linear-gradient(to top left, rgba(255,255,255,0) 0%, rgba(255,255,255,0.8) 100%)
	background-image: -o-linear-gradient(to top left, rgba(255,255,255,0) 0%, rgba(255,255,255,0.8) 100%)
	background-image: -moz-linear-gradient(to top left, rgba(255,255,255,0) 0%, rgba(255,255,255,0.8) 100%)
	background-image: -ms-linear-gradient(to top left, rgba(255,255,255,0) 0%, rgba(255,255,255,0.8) 100%)
	background-image: linear-gradient(to top left, rgba(255,255,255,0) 0%, rgba(255,255,255,0.8) 100%)
	span 
		border-bottom: 3px solid #fff;
		width: 65%;

.active-testimonials 
	background-color $navbar-submenu_shadow
	background-image: -webkit-linear-gradient(to top left, rgba(255,255,255,0) 0%, rgba(255,255,255,0.8) 100%)
	background-image: -o-linear-gradient(to top left, rgba(255,255,255,0) 0%, rgba(255,255,255,0.8) 100%)
	background-image: -moz-linear-gradient(to top left, rgba(255,255,255,0) 0%, rgba(255,255,255,0.8) 100%)
	background-image: -ms-linear-gradient(to top left, rgba(255,255,255,0) 0%, rgba(255,255,255,0.8) 100%)
	background-image: linear-gradient(to top left, rgba(255,255,255,0) 0%, rgba(255,255,255,0.8) 100%)
	span 
		border-bottom: 3px solid #fff;
		width: 75%;
		
.act-restroom, .active-waterless, .active-air  
	background: linear-gradient(135deg,#7db9e8 0%,#b7b7b5 0%,#8f9193 41%,#555456 99%) !important
	background: -webkit-gradient(linear,left top,right bottom,color-stop(0%,#7db9e8),color-stop(0%,#b7b7b5),color-stop(41%,#8f9193),color-stop(99%,#555456));
	background: -webkit-linear-gradient(-45deg,#7db9e8 0%,#b7b7b5 0%,#8f9193 41%,#555456 99%);
	background: -o-linear-gradient(-45deg,#7db9e8 0%,#b7b7b5 0%,#8f9193 41%,#555456 99%);
	background: -ms-linear-gradient(-45deg,#7db9e8 0%,#b7b7b5 0%,#8f9193 41%,#555456 99%);
	a 
		color white !important
		font-weight bold !important
		

@media screen and (min-width 200px) and (max-width 479px)
	.active-item 
		display none
		
@media screen and (min-width 480px) and (max-width 639px)
	.active-item 
		display none
		
@media screen and (min-width 640px) and (max-width 767px)
	.active-item 
		display none